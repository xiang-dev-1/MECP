{
  "expo": {
    "name": "MECP",
    "slug": "mecp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "mecp",
    "splash": {
      "backgroundColor": "#0f172a"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0f172a"
      },
      "package": "com.mecp.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN"
      ]
    },
    "ios": {
      "bundleIdentifier": "com.mecp.app",
      "supportsTablet": true
    },
    "plugins": [
      "expo-router",
      "expo-location",
      "expo-sqlite",
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": false,
          "modes": ["peripheral", "central"]
        }
      ],
      "./plugins/withMeshtasticAidl"
    ]
  }
}
